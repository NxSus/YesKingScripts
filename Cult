local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "CultivationGame", HidePremium = false, SaveConfig = true, ConfigFolder = "Config"})

--Values
_G.autoCult = true


--Functions

function autoCult()
 while _G.autoCult == true do 
   game:GetService("ReplicatedStorage").UpdateCultivation:FireServer()
   wait(.0000000000000000000000000001)
  end
 end

function autoPill()
 while _G.autoPill == true do 
   local args = {
    [1] = 1
   }

   game:GetService("ReplicatedStorage"):WaitForChild("CreatePill"):FireServer(unpack(args))
   wait(.000000000000000000000000001)
  end
 end

function autoPillTw()
 while _G.autoPillTw == true do 
   local args = {
    [1] = 2
   }

   game:GetService("ReplicatedStorage"):WaitForChild("CreatePill"):FireServer(unpack(args))
   wait(.000000000000000000000000001)
  end
 end

--Tabs
local Tab = Window:MakeTab({
	Name = "Mabin",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

--Buttons
Tab:AddButton({
	Name = "Cultivate Multiplier",
	Callback = function()
         while true do
          wait() --you need this, otherwise roblox will crash
          game:GetService("ReplicatedStorage").UpdateCultivation:FireServer()
         end
  	end    
})

Tab:AddButton({
	Name = "Breakthrough(Press Once)",
	Callback = function()
         while true do
          wait() --you need this, otherwise roblox will crash
          game:GetService("ReplicatedStorage").RequestBreakthrough:FireServer()
         end
  	end    
})

Tab:AddButton({
	Name = "Beast AutoXp(Press 5 Times)",
	Callback = function()
         while true do
          wait() --you need this, otherwise roblox will crash
          local args = {
          [1] = 1
          }

          game:GetService("ReplicatedStorage"):WaitForChild("UpdateBeastCultivation"):FireServer(unpack(args))
         end
  	end    
})

Tab:AddButton({
	Name = "AutoFight(Press Once!!!)",
	Callback = function()
         while true do
          wait() --you need this, otherwise roblox will crash
          game:GetService("ReplicatedStorage").GenerateFight:FireServer()
         end
        end    
})


--Toggles
Tab:AddToggle({
	Name = "Auto Cultivate",
	Default = false,
	Callback = function(Value)
	  _G.autoCult = Value
          autoCult()
	end    
})

Tab:AddToggle({
	Name = "Auto Pill",
	Default = false,
	Callback = function(Value)
	  _G.autoPill = Value
          autoPill()
	end    
})

Tab:AddToggle({
	Name = "Auto Pill 2",
	Default = false,
	Callback = function(Value)
	  _G.autoPillTw = Value
          autoPillTw()
	end    
})




OrionLib:Init()
